root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.{f90,F90}]
indent_style = space
indent_size = 4
max_line_length = 132

[*.{f,F}]
indent_style = space
max_line_length = 72

[{CMakeLists.txt,*.cmake}]
indent_style = space
indent_size = 2
max_line_length = 132

[*.md]
trim_trailing_whitespace = false

[*.{json,sh,toml,yml}]
indent_style = space
indent_size = 2

[*.py]
indent_style = space
indent_size = 4

[.pre-commit-config.yaml]
indent_style = space
indent_size = 4
